{{!
    @template block_coupon/coupon/inputform

    Coupon input form.

    Example context (json):
    {
        "urlinputcoupon": "#",
        "btnclass": "btn btn-primary",
        "instanceid": 0,
        "sesskey": "12345"
    }
}}
<form action="{{urlinputcoupon}}" method="post">
    <table>
        <tr><td>{{#str}}label:enter_coupon_code, block_coupon{{/str}}:</td></tr>
        <tr><td><input type="text" name="coupon_code"></td></tr>
        <tr><td><input type="submit" name="submitbutton" value="{{#str}}button:submit_coupon_code, block_coupon{{/str}}" class="{{btnclass}}"></td></tr>
    </table>
    <input type="hidden" name="id" value="{{instanceid}}">
    <input type="hidden" name="submitbutton" value="Submit Coupon">
    <input type="hidden" name="_qf__block_coupon_forms_coupon_validator" value="1">
    <input type="hidden" name="sesskey" value="{{sesskey}}">
</form>
